{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "esModuleInterop" : true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "ES2020",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["**/*.d.ts","dist", "node_modules"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
